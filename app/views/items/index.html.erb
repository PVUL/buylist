<h2>this is the index page for items</h2>

<p><%= link_to 'Add new item', new_item_path %></p>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Date Added</th>
  </tr>

  <% @items.each do |item| %>
  <tr>
    <td><%= link_to "#{item.name}", item_path(item) %></td>
    <td><%= item.price %></td>
    <td><%= item.created_at.strftime('%m/%d/%y') %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Delete', item_path(item), method: :delete %></td>
  </tr>
  <%- end -%>
</table>
