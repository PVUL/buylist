<h2>this is the index page for items</h2>

<p><%= link_to 'Add new item', new_item_path %></p>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Date Added</th>
  </tr>

  <% @items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= item.price %></td>
    <td><%= item.created_at %></td>
  </tr>
  <%- end -%>
</table>
